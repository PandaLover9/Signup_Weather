<%- include("partials/header") %>


<div class="box">
<h1>Your To-Do-List.</h1>
    <div class="item">
      <li>Add or delete your to do list here</li>
      <br>
      <%  newListItems.forEach(function(item){ %>

        <form action="/delete" method="post">
          <div class="item">
            <input type="checkbox" name="checkId" value="<%=item._id%>" onChange="this.form.submit()">
            <p><%=item.itemName%></p>
          </div>
        </form>
      <%  }) %>
    </div>
  <form action= "/todolist" class="form-signin" method ="post">
    <input type="text" name="newItem" placeholder="Item">
    <button type="submit" name="list" value="">Add</button>
  </form>
  <div>
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
  </div>
</div>
  




<%- include("partials/footer") %>
